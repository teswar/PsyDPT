@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Disorder Prediction</h2>
</div>

<div class="container">
    <div class="col-lg-4">
        @{
            Html.RenderAction("PatientInfoSideBar", "Home", new { area = "Patient" });
        }
    </div>

    <div class="col-lg-6">
        <div class="row">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-2 control-label" for="txtSymptoms">Symptoms</label>
                    <div class="col-lg-10">
                        <textarea placeholder="Enter your Symptoms" id="txtSymptoms" class="form-control" rows="3">

                        </textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button class="btn btn-primary" type="submit">Predict</button>
                    </div>
                </div>
            </form>
      
        </div>
    </div>

</div>

