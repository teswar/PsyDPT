@using Psydpt.Areas.Patient.ViewModels;
@model Psydpt.Areas.Patient.ViewModels.PatientInfoVm

<div class="patient-info-sidebar">
    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Name", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control", placeholder = "Name"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Age, "Age", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.Age, htmlAttributes: new { @class = "form-control", placeholder = "Age" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Gender, "Gender", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.Gender, htmlAttributes: new { @class = "form-control", placeholder = "Gender" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MatialStatus, "MatialStatus", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.MatialStatus, htmlAttributes: new { @class = "form-control", placeholder = "Matial Status" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BloodType, "Blood Group", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.BloodType, htmlAttributes: new { @class = "form-control", placeholder = "Blood Group" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.HeightInCm, "Height", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.HeightInCm, htmlAttributes: new { @class = "form-control", placeholder = "Height" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.WeightInKg, "Weight", htmlAttributes: new { @class = "col-lg-2 control-label" })
            <div class="col-lg-8">
                @Html.TextBoxFor(m => m.WeightInKg, htmlAttributes: new { @class = "form-control", placeholder = "Weight" })
            </div>
        </div>
    </form>
</div>